{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "incremental": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/contracts/generated"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "cypress.config.js"],
  "exclude": ["node_modules", "e2e/**", "**/maverick-schema.d.ts"]
}
