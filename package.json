{
  "name": "cloudflare-pages",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run check-env && NODE_ENV=production vite build --mode client && NODE_ENV=production vite build",
    "preview": "wrangler pages dev",
    "deploy": "pnpm run build && wrangler pages deploy",
    "types-generate": "pnpm openapi-typescript https://maverick-public-services-stage.dev.gotickets.com/api/open-api -o ./src/services/maverick/generated/maverick-schema.d.ts",
    "check-env": "node scripts/get-env.js",
    "format": "pnpm prettier 'src/**/*.{ts,tsx}' --write",
    "format-check": "pnpm prettier 'src/**/*.{ts,tsx}' --check",
    "lint": "pnpm eslint --cache",
    "validate": "pnpm tsc --noEmit",
    "prepare": "husky",
    "test": "vitest",
    "test-coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@fontsource-variable/plus-jakarta-sans": "^5.1.1",
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-query": "^5.63.0",
    "altcha-lib": "^1.2.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "hono": "^4.6.14",
    "jose": "^5.9.6",
    "openapi-fetch": "^0.13.4",
    "panzoom": "^9.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-inlinesvg": "^4.1.5",
    "react-router": "^7.1.1",
    "react-virtualized-auto-sizer": "^1.0.25",
    "react-window": "^1.8.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@eslint/js": "^9.18.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.17.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "3.0.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.18.0",
    "eslint-plugin-perfectionist": "^4.6.0",
    "globals": "^15.14.0",
    "happy-dom": "^16.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "openapi-typescript": "^7.5.2",
    "postcss": "^8.4.49",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "smol-toml": "^1.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^5.2.12",
    "vitest": "^3.0.2",
    "wrangler": "^3.96.0"
  }
}
